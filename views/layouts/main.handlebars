<html lang="en" ng-app="DonP">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Data On Politics</title>
  <meta name="theme-color" content="#1976D2" />
  {{#if data}}
    {{#if data.article}}
      <!-- general meta -->
      <meta name="title" content="{{data.title}}" />
      <meta name="description" content="{{data.subtitle}}" />
      <!-- Facebook metadata -->
      <meta property="og:url"                content="http://www.dataonpolitics.com/article/{{data._id}}" />
      <meta property="og:type"               content="article" />
      <meta property="og:title"              content="{{data.title}}" />
      <meta property="og:description"        content="{{data.subTitle}}" />
      <meta property="og:image"              content="http://www.dataonpolitics.com/img/graphics/{{data.graphicSrc}}" />
      <meta name="author" content="{{data.author}}" />
      <meta name="description" content="{{data.subtitle}}" />
      <!-- Twitter metadata -->
      <meta name="twitter:card" content="summary">
      <meta name="twitter:url" content="http://www.dataonpolitics.com/article/{{data._id}}">
      <meta name="twitter:title" content="{{data.title}}">
      <meta name="twitter:description" content="{{data.subTitle}}">
      <meta name="twitter:image" content="http://www.dataonpolitics.com/img/graphics/{{data.graphicSrc}}">
      <meta name="twitter:site" content="@dataonpolitics">
      <meta name="twitter:creator" content="@pawlakmike">
    {{else}}
      <!-- tool metadata -->
      <meta name="title" content="{{data.title}}" />
      <meta name="description" content="{{data.subtitle}}" />
      <!-- Facebook metadata -->
      <meta property="og:url"                content="http://www.dataonpolitics.com/{{data.url}}" />
      <meta property="og:title"              content="{{data.title}}" />
      <meta property="og:description"        content="{{data.subTitle}}" />
      <meta property="og:image"              content="http://www.dataonpolitics.com/img/tools/graphics/{{data.graphicSrc}}" />
      <!-- Twitter metadata -->
      <meta name="twitter:card" content="summary">
      <meta name="twitter:url" content="http://www.dataonpolitics.com/{{data.url}}">
      <meta name="twitter:title" content="{{data.title}}">
      <meta name="twitter:description" content="{{data.subTitle}}">
      <meta name="twitter:image" content="http://www.dataonpolitics.com/img/tools/graphics/{{data.graphicSrc}}">
      <meta name="twitter:site" content="@dataonpolitics">
      <meta name="twitter:creator" content="@pawlakmike">
    {{/if}}
  {{else}}
    <!-- general metadata -->
    <meta name="title" content="Data On Politics" />
    <meta name="description" content="A progressive site dedicated to making data and statistics on American politics as accessible as possible" />
    <!-- Facebook metadata -->
    <meta property="og:url"                content="http://www.dataonpolitics.com" />
    <meta property="og:type"               content="website" />
    <meta property="og:description"        content="A progressive site dedicated to making data and statistics on American politics as accessible as possible" />
    <meta property="og:image"              content="http://www.dataonpolitics.com/img/dop_cover.png" />
    <meta name="author" content="{{data.author}}" />
    <!-- Twitter metadata -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:url" content="http://www.dataonpolitics.com">
    <meta name="twitter:title" content="Data On Politics">
    <meta name="twitter:description" content="A progressive site dedicated to making data and statistics on American politics as accessible as possible">
    <meta name="twitter:image" content="http://www.dataonpolitics.com/img/dop_cover.png">
    <meta name="twitter:site" content="@dataonpolitics">
  {{/if}}


  <meta property="og:app_id"   content="282755062169285" />
  <link rel="shortcut icon" href="img/favicon.ico" />

