  <link rel="stylesheet" href="../vendor/angular-material/angular-material.min.css">
  <link rel="stylesheet" href="../styles/styles.css">
  <!-- carousel and deps -->
  <link href="../vendor/swiper/dist/css/swiper.min.css" rel="stylesheet" type="text/css" />
</head>
